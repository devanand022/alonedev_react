{
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist/types",
    "emitDeclarationOnly": false,
    "target": "ES6",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "noEmit": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "src/**/*.stories.tsx", "src/**/*.test.tsx"],
}
